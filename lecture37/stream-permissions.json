{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowDDBStreamRead",
      "Effect": "Allow",
      "Action": [
        "dynamodb:DescribeStream",
        "dynamodb:GetRecords",
        "dynamodb:GetShardIterator",
        "dynamodb:ListStreams"
      ],
      "Resource": "arn:aws:dynamodb:us-east-1:873868729805:table/Users/stream/*"
    }
  ]
}
